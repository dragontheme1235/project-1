<config>
    <modules>
        <DGTThemes_DGTYaris>
            <version>v1.0</version>
        </DGTThemes_DGTYaris>
    </modules>
        <frontend>
        <routers>
            <dgtyaris>
                <use>standard</use>
                <args>
                    <module>DGTThemes_DGTYaris</module>
                    <frontName>dgtyaris</frontName>
                </args>
            </dgtyaris>
        </routers>
        <layout>
            <updates>
                <dgtyaris>
                    <file>dgtyaris.xml</file>
                </dgtyaris>
            </updates>
        </layout> 
        <events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>dgtyaris/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
            <catalog_block_product_list_collection>
                <observers>
                    <dgtyaris>
                        <type>model</type>
                        <class>dgtyaris/observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </dgtyaris>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>
    <admin>
        <routers>
	       <dgtyaris>
				<use>admin</use>
				<args>
				    <module>DGTThemes_DGTYaris</module>
				    <frontName>dgtyaris</frontName>
				</args>
	       </dgtyaris>
        </routers>
    </admin>
    <adminhtml>
		<layout>
		    <updates>
			<dgtyaris>
			    <file>dgtyaris.xml</file>
			</dgtyaris>
		    </updates>
		</layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <dgtyaris>
                        <type>singleton</type>
                        <class>dgtyaris/observer</class>
                        <method>configSave</method>
                    </dgtyaris>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>

            <store_edit>
                <observers>
                    <dgtyaris>
                        <type>singleton</type>
                        <class>dgtyaris/observer</class>
                        <method>storeEdit</method>
                    </dgtyaris>
                </observers>
            </store_edit>
        </events>
    </adminhtml>   
    <global>
        <models>
            <dgtyaris>
                <class>DGTThemes_DGTYaris_Model</class>
            </dgtyaris>
            <core>
                <rewrite>
                    <layout>DGTThemes_DGTTheme_Model_System_Layout_Layout</layout>
                </rewrite>
            </core>
        </models>
        <resources>
