<?php
$theme = $this->helper('dgtyaris');
$enable_footer = $theme->getCfg('footer/enable_footer');
$enable_footer_top = $theme->getCfg('footer/enable_footer_top');
$enable_footer_bottom = $theme->getCfg('footer/enable_footer_bottom');
$enable_footer_copyright = $theme->getCfg('footer/enable_footer_copyright');
$enable_go_to_top = $theme->getCfg('footer/enable_go_to_top');
?>

<?php if($enable_footer) : ?>
<footer class="footer-container">
    <?php if($enable_footer_top) { ?>
    <div class="dgt-footer-top">
        <div class="container">
            <div class="dgt-footer-top-inner">
                <?php echo $this->getChildHtml('footer_top') ?>
            </div>
        </div>
    </div>
    <?php } if($enable_footer_bottom) { ?>
    <div class="footer">
        <div class="container">
            <div class="dgt-footer-inner">
                <?php echo $this->getChildHtml('footer_content') ?>
            </div>
        </div>
    </div>
    <?php } if($enable_footer_copyright) { ?>
    <div class="dgt-copyright">
        <div class="container">
            <address><?php echo $this->getCopyright() ?></address>
            <?php echo $this->getChildHtml('store_switcher')?>
        </div>
    </div>
    <?php } if($enable_go_to_top) { ?>
    <div id="dgt-back-to-top" class="hidden-xs">
        <a href="#top">
            <div class="sticker-wrapper">
                <div class="sticker" title="<?php echo $this->__('Back to Top') ?>">
                    <i class="fa fa-long-arrow-up"></i>
                </div>
            </div>
        </a>
    </div>
    <?php } ?>
</footer>
<?php endif; ?>

